<?xml version="1.0" encoding="utf-8"?>
<Project name="GLSL Particle Systems">

  
  <Container name     ="Fire" 
             texture  ="./data/images/FireSheet2.png" spriteCountX="2" spriteCountY="1">
    <Emitter>
      <BasicData 
        name          ="Flame"  
        spriteLocation="0,0"  />      
      <VertData
        size          ="10.0"
        color         ="255, 64, 5, 255"  
        positionX     ="2 ~ -2"
        positionY     ="2 ~ -2"
        positionZ     ="0 ~ -0" 
        
        velocityX     ="0.02   ~ -0.02"
        velocityY     ="0.02   ~ -0.02"
        velocityZ     ="0.1    ~  0.3" />
      <SpawnRules 
        initialCount  ="0"
        renderDelay   ="0.0"
        lifespan      ="1.5"
        fadeTime      ="1.5"
        spawnRate     ="1500~1.5"
        spawnRateLoop ="TRUE"   />
     <RenderingRules
        GLType        ="ADDITIVE"/>
    </Emitter>
    <!--
    ///////////////////////////////////////////////////////////////////
    ///////////////////////////////////////////////////////////////////
    -->
    <Emitter>
      <BasicData
        name          ="Smoke"
        spriteLocation="0,0"/>
      <VertData
        size          ="10.0"
        color         ="64, 64, 64, 255"
        positionX     ="2 ~ -2"
        positionY     ="2 ~ -2"
        positionZ     ="0 ~  0"
        
        velocityX     ="0.05   ~ -0.05"
        velocityY     ="0.05   ~ -0.05"
        velocityZ     ="0.1   ~  0.3" />
      <SpawnRules
        initialCount  ="0"
        renderDelay   ="0.0"
        lifespan      ="3.0"
        fadeTime      ="3.0"
        spawnRate     ="1000~9"
        spawnRateLoop ="TRUE"     />
      <RenderingRules
        GLType        ="ADDITIVE" />      
    </Emitter>
    <!--
    ///////////////////////////////////////////////////////////////////
    ///////////////////////////////////////////////////////////////////
    -->
    <Emitter>
      <BasicData 
        name          ="Spark"
        spriteLocation="1,0"/>
      <VertData
        size          ="3.0"
        color         ="255, 128, 0, 255"
        
        velocityX     ="0.4  ~ -0.4"
        velocityY     ="0.4  ~ -0.4"
        velocityZ     ="0.4  ~ -0.4" />
      <SpawnRules
        initialCount  ="0"
        renderDelay   ="0.0"
        lifespan      ="1.0"
